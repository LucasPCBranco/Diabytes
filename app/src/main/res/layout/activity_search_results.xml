    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nerds.tcctest.SearchResultsActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/search_results_toolbar"/>

    <ListView
